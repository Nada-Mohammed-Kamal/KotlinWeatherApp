<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4FFFFDFD"
    android:backgroundTint="#4FFFFDFD">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4FFFFDFD"
            android:backgroundTint="#4FFFFDFD"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txtViewDateAndTimeDailyWeatherRowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="05/02 Friday"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewLowTempDailyWeatherRowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="20dp"
                android:text="30"
                app:layout_constraintEnd_toStartOf="@+id/txtViewHightTempDailyWeatherRowId"
                app:layout_constraintHorizontal_bias="0.876"
                app:layout_constraintStart_toEndOf="@+id/imgViewIconDailyWeatherRowId"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtViewHightTempDailyWeatherRowId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="19"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/txtViewLowTempDailyWeatherRowId" />

            <ImageView
                android:id="@+id/imgViewIconDailyWeatherRowId"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/txtViewDateAndTimeDailyWeatherRowId"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cloudy" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>