<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainer"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bubbleNavigationBarid"
        app:defaultNavHost="true"
        app:navGraph="@navigation/my_nav" />

    <com.gauravk.bubblenavigation.BubbleNavigationLinearView
        android:id="@+id/bubbleNavigationBarid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:elevation="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/homeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bt_active="true"
            app:bt_colorInactive="#5A5A5A"
            app:bt_icon="@drawable/home"
            app:bt_shapeColor="@android:color/holo_green_light"
            app:bt_title="Home" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/favToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            app:bt_active="true"
            app:bt_colorInactive="#5A5A5A"
            app:bt_icon="@drawable/favorite"
            app:bt_shapeColor="@android:color/holo_green_light"
            app:bt_title="Favorites" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/alarmToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:bt_active="true"
            app:bt_colorInactive="#5A5A5A"
            app:bt_icon="@drawable/alarm"
            app:bt_shapeColor="@android:color/holo_green_light"
            app:bt_title="Alarms" />

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/settingToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:bt_active="true"
            app:bt_colorInactive="#5A5A5A"
            app:bt_icon="@drawable/settings"
            app:bt_shapeColor="@android:color/holo_green_light"
            app:bt_title="Settings" />
    </com.gauravk.bubblenavigation.BubbleNavigationLinearView>

    </RelativeLayout>
